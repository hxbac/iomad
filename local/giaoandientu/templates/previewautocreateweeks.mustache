<style>
    table.lms_custom_table td {
        height: 100%;
        vertical-align: middle;
    }
</style>

<table class="table table-striped lms_custom_table">
    <thead>
        <tr>
            <th scope="col">Tên tuần</th>
            <th scope="col">Ngày bắt đầu</th>
            <th scope="col">Ngày kết thúc</th>
            <th scope="col">Yêu cầu</th>
        </tr>
    </thead>
    <tbody>
        {{#data}}
        <tr>
            <td>{{weekname}}</td>
            <td>
                {{#userdate}} {{startdate}} {{/userdate}}
            </td>
            <td>
                {{#userdate}} {{enddate}} {{/userdate}}
            </td>
            <td>{{description}}</td>
        </tr>
        {{/data}}
    </tbody>
</table>

<div style="display: flex; justify-content: center; align-items: center;">
    <form action="{{{ urlcontinue }}}" method="POST">
        <input type="hidden" value='{{{jsondatalistweeks}}}' name="jsonlistweeks">
        <input type="hidden" value="{{{categoryid}}}" name="categoryid">
        <input type="hidden" value="preview" name="action">
        <button type="submit" class="btn btn-primary">Tiếp tục</button>
    </form>
</div>