<style>
    table.lms_custom_table td {
        height: 100%;
        vertical-align: middle;
    }
</style>
{{#breadcrumbobj}}
<div style="margin-bottom: 20px;"><a href="{{{ urlgiaoandientu }}}">Giáo án điện tử / </a>{{ parentname }}<b>{{ name }}</b></div>
{{/breadcrumbobj}}
<table class="table table-hover lms_custom_table">
    <thead>
        <tr>
            <th scope="col">Tuần</th>
            <th scope="col">Môn học</th>
            <th scope="col">Thời hạn</th>
            <th scope="col">Yêu cầu</th>
            <th scope="col" style="text-align: center;">Xem lịch sử</th>
            <th scope="col" style="text-align: center;">Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        {{#weeks}}
        <tr 
        {{#disablerow}}
        style="background-color: rgba(0,0,0,.075);"
        {{/disablerow}}
        >
            <td>{{ weekname }}</td>
            <td>{{ course }}</td>
            <td>{{#userdate}} {{startdate}} {{/userdate}} - <br>{{#userdate}} {{enddate}} {{/userdate}}</td>
            <td>{{ description }}</td>
            <td style="text-align: center;"><a href="{{{ urlhistory }}}">Xem</a></td>
            <td style="text-align: center;">
                {{#urlsendfile}}
                    <a href="{{{ urlsendfile }}}" class="btn btn-primary">Nộp</a>
                {{/urlsendfile}}
                {{messagestatus}}
            </td>
        </tr>
        {{/weeks}}
    </tbody>
</table>