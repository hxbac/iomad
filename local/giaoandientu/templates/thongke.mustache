<style>
    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 310px;
        max-width: 800px;
        margin: 1em auto;
    }

    #container {
        height: 400px;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }
</style>

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/data.js"></script>
<script src="https://code.highcharts.com/modules/drilldown.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

{{#breadcrumbobj}}
<div style="margin-bottom: 20px; padding-left: 140px;"><a href="{{{ urlgiaoandientu }}}">Giáo án điện tử / </a>{{ parentname }}<b>{{ name }}</b></div>
{{/breadcrumbobj}}
<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">
        Thống kê số báo cáo chưa gửi của mỗi tuần. Click để xem chi tiết những môn chưa gửi trong tuần đó.
    </p>
</figure>


<script>
    Highcharts.chart('container', {
        chart: {
            type: 'column'
        },
        title: {
            align: 'left',
            text: 'Thống kê báo cáo chưa gửi của danh mục'
        },
        subtitle: {
            align: 'left',
            text: 'Click vào các cột để xem chi tiết các môn chưa gửi của tuần đó'
        },
        accessibility: {
            announceNewData: {
                enabled: true
            }
        },
        xAxis: {
            type: 'category'
        },
        yAxis: {
            title: {
                text: 'Tổng số báo cáo chưa gửi'
            }

        },
        legend: {
            enabled: false
        },
        plotOptions: {
            series: {
                borderWidth: 0,
                dataLabels: {
                    enabled: true,
                    format: '{point.y:,.0f}'
                }
            }
        },

        tooltip: {
            headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
            pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}%</b> of total<br/>'
        },

        series: [
            {
                name: "Tuần",
                colorByPoint: true,
                data: [
                    {{#weeks}}
                    {
                        name: "{{ weekname }}",
                        y: {{ solanchuagui }},
                        drilldown: "{{ weekname }}"
                    },
                    {{/weeks}}
                ]
            }
        ],
        drilldown: {
            breadcrumbs: {
                position: {
                    align: 'right'
                }
            },
            series: [
                {{#weeks}}
                {
                    name: "{{ weekname }}",
                    id: "{{ weekname }}",
                    data: [
                        {{#data}}
                        [
                            "{{ coursename }}",
                            {{ solanchuagui }}
                        ],
                        {{/data}}
                    ]
                },
                {{/weeks}}
            ]
        }
    })
</script>